{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "name": "Text Saver",
  "short_name": "TextSaver",
  "version": "1.0.0",
  "description": "Save selected text to two files via context menu",
  "author": "Mridang Agarwalla <mridang.agarwalla@gmail.com>",
  "homepage_url": "https://github.com/mridang/webext-save-selection",
  "permissions": [
    "contextMenus",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
