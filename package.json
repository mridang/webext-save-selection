{
  "name": "text-saver-extension",
  "version": "1.0.0",
  "type": "module",
  "description": "Chrome extension to save selected text to a file",
  "keywords": [
    "chrome-extension",
    "text-saver",
    "context-menu",
    "download"
  ],
  "author": {
    "name": "Mridang Agarwalla",
    "email": "mridang.agarwalla@gmail.com",
    "url": "https://github.com/mridang"
  },
  "license": "Apache-2.0",
  "private": false,
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mridang/webext-save-selection.git"
  },
  "homepage": "https://github.com/mridang/webext-save-selection",
  "bugs": "https://github.com/mridang/webext-save-selection/issues",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "npm run build",
    "build": "rollup --config=rollup.config.js",
    "test": "jest --verbose --config=jest.config.mjs --runInBand",
    "test:watch": "npm run test -- --watch",
    "test:debug": "jest --verbose --config=jest.config.mjs --runInBand --detectOpenHandles",
    "test:coverage": "jest --verbose --config=jest.config.mjs --runInBand --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@mridang/eslint-defaults": "^1.5.0",
    "@playwright/test": "^1.57.0",
    "@resvg/resvg-js": "^2.6.2",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@tsconfig/node22": "^22.0.5",
    "@types/chrome": "^0.1.32",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.2",
    "eslint": "^9.17.0",
    "jest": "^30.2.0",
    "knip": "^5.73.4",
    "prettier": "^3.3.3",
    "rollup": "^4.28.1",
    "rollup-plugin-copy": "^3.5.0",
    "semantic-release": "^25.0.0",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
